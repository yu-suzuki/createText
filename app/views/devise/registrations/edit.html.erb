<%= render "devise/shared/error_messages", resource: resource %>
<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
<%= react_component("CustomizedSnackbars", {type: 'warning', message: resource.unconfirmed_email+'に確認メールを送付しました'}) %>
<% end %>

<%= react_component("EditUser", {email: resource.email,
                                 waiting_status: devise_mapping.confirmable? && resource.pending_reconfirmation?,
                                  unconfirmed_email: resource.unconfirmed_email
}) %>
